<h1><%= @student.name %> STUDENT NAME</h1>

<h2>Assignments</h2>

<table>
  <thead>
    <tr>
      <th>Assignment</th>
      <th>Description</th>
      <th>Assigned</th>
      <th>Due Date</th>
      <th>Url</th>
      <th>On Time</th>
      <th>Grade</th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.title %></td>
        <td><%= assignment.description %></td>
        <td><%= assignment.assigned.strftime("%m/%d/%Y") %></td>
        <td><%= assignment.due.strftime("%b %e, %l:%M %p") %></td>
        <% student_assignment = @student.completed(assignment) %>
        <% if student_assignment %>
          <td><%= link_to "gigGITy", student_assignment.github_url %></td>
          <td><% if student_assignment.on_time %>
            <i class="fa fa-check-circle success"></i>
          <% else %>
            <i class="fa fa-times-circle fail"></i>
          <% end %></td>
          <td><%= student_assignment.grade %></td>
        <% end %>
        <td colspan="3">
        <%= form_for @student.student_assignments.build, url: :assignments do |f| %>
          <%= f.hidden_field :student_id, value: @student.id %>
          <%= f.hidden_field :assignment_id, value: assignment.id %>
          <%= f.text_field :github_url %>
          <%= f.submit "Submit" %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student assignment', new_student_assignment_path %>
